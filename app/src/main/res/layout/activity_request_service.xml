<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Request_service"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_service_time"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务时间:"
            android:textColor="#000"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/edit_service_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_service_time"
            android:layout_toRightOf="@+id/text_service_time"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_service_plance"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务地点:"
            android:textColor="#000"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/edit_service_plance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_service_plance"
            android:layout_toRightOf="@+id/text_service_plance"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_service_decribe"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务内容:"
            android:textColor="#000"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/edit_service_decribe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_service_decribe"
            android:layout_toRightOf="@+id/text_service_decribe"/>


    </RelativeLayout>

    <Button
        android:id="@+id/btn_request_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认提交"
        android:textSize="26dp"
        android:textColor="#000"/>





</LinearLayout>